local game_score = 0

function init(self)
	self.text_node = gui.get_node("score")
	self.stop_increment_score = false
	gui.set_text(self.text_node, game_score)
end

function final(self)
	-- Add finalization code here
	-- Remove this function if not needed
end

function update(self, dt)
	if self.stop_increment_score == false then
		gui.set_text(self.text_node, game_score)
	end
end

function on_message(self, message_id, message, sender)
	if message_id == hash("increment_score") then
		game_score = game_score + 1
	elseif message_id == hash("stop_increment_score") then
		self.stop_increment_score = true
	end
end

